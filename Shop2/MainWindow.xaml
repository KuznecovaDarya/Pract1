<Window x:Class="Shop2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop2"
        mc:Ignorable="d"
        Title="Вход" Height="300" Width="500"
        Background="RosyBrown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Имя:" Grid.Row="0" FontSize="48" HorizontalAlignment="Left"/>

        <TextBlock Text="Пароль:" Grid.Row="1" FontSize="48" HorizontalAlignment="Left"/>
        <TextBox Text="{Binding Password.Worker}" x:Name="Password" Grid.Row="1" HorizontalAlignment="Right" Width="278" Margin="0,10,10,34"/>

        <Button x:Name="Ok" Content="Ok" Grid.Row="2" Width="70" Height="50" Margin="114,9,108,41" FontSize="36" Click="Ok_Click"/>
        <TextBox Text="{Binding Name.Worker}" x:Name="Name" HorizontalAlignment="Right" Width="278" Margin="0,10,10,34"/>
    </Grid>
</Window>
